{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OrderIntent",
  "type": "object",
  "required": ["type", "entry", "stop", "take_profit", "time_in_force"],
  "properties": {
    "type": {"type": "string", "enum": ["BRACKET"]},
    "entry": {
      "type": "object",
      "required": ["type", "price"],
      "properties": {
        "type": {"type": "string", "enum": ["STOP", "LIMIT", "MARKET"]},
        "price": {"type": "number", "exclusiveMinimum": 0}
      }
    },
    "stop": {
      "type": "object",
      "required": ["type", "price"],
      "properties": {
        "type": {"type": "string", "enum": ["STOP"]},
        "price": {"type": "number", "exclusiveMinimum": 0}
      }
    },
    "take_profit": {
      "type": "object",
      "required": ["type", "price"],
      "properties": {
        "type": {"type": "string", "enum": ["LIMIT"]},
        "price": {"type": "number", "exclusiveMinimum": 0}
      }
    },
    "time_in_force": {"type": "string", "enum": ["DAY"]}
  }
}
