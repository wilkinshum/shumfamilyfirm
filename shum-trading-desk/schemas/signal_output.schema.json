{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "StrategySignalOutput",
  "type": "object",
  "required": ["as_of", "strategy_id", "universe", "candidates", "data_quality"],
  "properties": {
    "as_of": {"type": "string", "format": "date-time"},
    "strategy_id": {"type": "string"},
    "universe": {
      "type": "array",
      "items": {"type": "string"},
      "minItems": 1
    },
    "candidates": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["symbol", "side", "entry", "stop", "take_profit", "time_in_force", "setup_tags", "expected_r_multiple", "confidence", "notes"],
        "properties": {
          "symbol": {"type": "string"},
          "side": {"type": "string", "enum": ["BUY"]},
          "entry": {
            "type": "object",
            "required": ["type", "price"],
            "properties": {
              "type": {"type": "string", "enum": ["STOP", "LIMIT", "MARKET"]},
              "price": {"type": "number", "exclusiveMinimum": 0}
            }
          },
          "stop": {
            "type": "object",
            "required": ["type", "price"],
            "properties": {
              "type": {"type": "string", "enum": ["STOP"]},
              "price": {"type": "number", "exclusiveMinimum": 0}
            }
          },
          "take_profit": {
            "type": "object",
            "required": ["type", "price"],
            "properties": {
              "type": {"type": "string", "enum": ["LIMIT"]},
              "price": {"type": "number", "exclusiveMinimum": 0}
            }
          },
          "time_in_force": {"type": "string", "enum": ["DAY"]},
          "setup_tags": {
            "type": "array",
            "items": {"type": "string"}
          },
          "expected_r_multiple": {"type": "number"},
          "confidence": {"type": "number", "minimum": 0, "maximum": 1},
          "notes": {"type": "string"}
        }
      }
    },
    "data_quality": {
      "type": "object",
      "required": ["ok", "issues"],
      "properties": {
        "ok": {"type": "boolean"},
        "issues": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    }
  }
}
